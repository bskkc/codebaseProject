@model IEnumerable<codebaseProjesi.Models.Customer>

@{
    ViewData["Title"] = "List";
}

<h1>Customer List</h1>
<style>
    body {
        background-color: black;
    }

    * {
        color: white;
    }

    td {
        font-weight: bold;
    }

    a {
        color: white;
    }
</style>
<p>
    <a asp-action="Index">Create New Customer</a>
</p>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                <a>Customer Id</a>
            </th>
            <th>
               <a>Customer Name</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CustomerId }, new { @class = "btn btn-primary" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
